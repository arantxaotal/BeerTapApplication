        p
          h2 = 'Tap information for user '+ @user.name
          h5 = 'Total seconds: '+ (!@user.tap.try(:total_seconds).nil? ? @user.tap.try(:total_seconds).round(2).to_s : '0')
          h5 = 'Total euros: '+ (!@user.tap.try(:total_euros).nil? ? @user.tap.try(:total_euros).round(2).to_s : '0')+' â‚¬'
      - if @stop == 'false'
        .div  class="form-outline mb-4"
          = link_to 'Start', save_start_date_path(user_id:@user.id), class:"btn btn-success"
        .div class="form-outline mb-4"
          = link_to 'Log Out', login_users_path, class: 'btn btn-primary'
