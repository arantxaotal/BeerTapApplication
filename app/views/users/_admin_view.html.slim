      .table class="table"
        tr
          th = "Beer type"
          th = "Flow volume"
          th = "Prize per litre"

        p
          h2 = 'Tab '+@user.tab.beer_type_name+' information for user '+ @user.name
          h5 = 'Total minutes: '+ (!@user.tab.try(:total_minutes).nil? ? @user.tab.try(:total_minutes).round(2).to_s : '0')
          h5 = 'Total euros: '+ (!@user.tab.try(:total_euros).nil? ? @user.tab.try(:total_euros).round(2).to_s : '0')+' â‚¬'
      - if @stop == 'false'
        .div  class="form-outline mb-4"
          = link_to 'Start', save_start_date_path(user_id:@user.id), class:"btn btn-success"
        .div class="form-outline mb-4"
          = link_to 'Log Out', login_users_path, class: 'btn btn-primary'
        .div class="form-outline mb-4"
          = link_to 'Reset', reset_path, class: 'btn btn-warning'
